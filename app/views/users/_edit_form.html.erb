<%= form_for(@user) do |f| %>
    <% if @user.errors.any? %>
        <div id="error_explanation" class="alert-box alert radius">
          <h5><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h5>

          <ul>
            <% @user.errors.full_messages.each do |message| %>
                <% if message == 'Email has already been taken' %>
                    <li>
                      <p>Email has already been taken.</p>
                      <% unless current_user.facebook_id.nil? %>
                        <%= link_to 'Click Here Request Merge', user_merge_path %>
                      <% end %>
                    </li>
                <% else %>
                    <li><%= message %></li>
                <% end %>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="row">
      <div class="large-4 columns">
        <%= f.label :first_name %>
        <%= f.text_field :first_name %>
      </div>
    </div>

    <div class="row">
      <div class="large-4 columns">
        <%= f.label :last_name %>
        <%= f.text_field :last_name %>
      </div>
    </div>

    <div class="row">
      <div class="large-4 columns">
        <%= f.label :email %>
        <%= f.text_field :email %>
      </div>
    </div>

    <div class="row">
      <div class="large-4 columns">
        <%= f.label :username %>
        <%= f.text_field :username %>
      </div>
    </div>

    <div class="row">
      <div class="large-4 columns">
        <%= f.label :password %>
        <%= f.password_field :password %>
      </div>
    </div>

    <div class="row">
      <div class="large-4 columns actions">
        <%= f.submit 'Update Profile', :class => 'button small success' %>
      </div>
    </div>

<% end %>
