<%= form_for(@user) do |f| %>


    <div class="row">
      <div class="large-4 columns">
        <%= f.label :password %>
        <%= f.password_field :password %>
      </div>
    </div>

    <div class="row">
      <div class="large-4 columns actions">
        <%= button_tag type: 'submit', class: 'button small success' do %>
            <%= image_tag 'save-icon.svg', class: 'ty-icon' %>
            &nbsp;
            Update Password
        <% end %>
      </div>
    </div>


<% end %>