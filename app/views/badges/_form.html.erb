<%= form_for(@badge, multipart: true, data: {'abide' => true})  do |f| %>
  <% if @badge.errors.any? %>
    <div id="error_explanation" class="alert-box alert radius">
      <h5><%= pluralize(@badge.errors.count, "error") %> prohibited this badge from being saved:</h5>

      <ul>
        <% @badge.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="large-4 columns">
      <%= f.text_field :name, placeholder: 'Name' %>
    </div>
  </div>

  <div class="row">
    <div class="large-4 columns">
      <%= f.text_area :rules, placeholder: 'Rules' %>
    </div>
  </div>

  <div class="row">
    <div class="large-4 columns">
      <fieldset>
        <legend>Upload Image</legend>
        <div class="row">
          <div class="large-12 columns">
            <%= image_tag 'avatar.png', class: 'hidden image_to_upload' %>

            <%= f.label :image, 'Add a pic!'%>
            <%= f.file_field :image, class: 'photo_upload' %>
            <%= hidden_field_tag :retained_photo %>
          </div>
        </div>
      </fieldset>
    </div>
  </div>

  <div class="row">
    <div class="large-4 columns actions">
      <%= button_tag type: 'submit', class: 'button small success' do %>
        <%= image_tag 'save-icon.svg', class: 'ty-icon' %>
        &nbsp;
        Save Badge
      <% end %>

      &nbsp;&nbsp;&nbsp;&nbsp;
      <%= link_to 'Cancel', request.env["HTTP_REFERER"] %>
    </div>
  </div>

<% end %>