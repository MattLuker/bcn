<div class="columns large-12">


  <h3><%= @badge.name %></h3>

  <% if current_user && current_user.admin? %>
    <%= link_to @badge, method: :delete, class: 'button alert tiny delete_badge right icon',
                data: { confirm: 'Are you sure?' } do %>
      <%= image_tag 'trash-icon.svg', class: 'icon' %>
    <% end %>

  <% end %>

  <% if current_user && current_user.admin? %>
    <%= link_to edit_badge_path(@badge), class: 'button tiny icon badge-edit right', title: 'Edit Badge' do %>
      <%= image_tag 'edit-icon.svg', class: 'icon' %>
    <% end %>
  <% end %>

  <br/><br/>

  <%= image_tag @badge.image.url, class: 'badge-image' %>

  <br/><br/>

  <strong class="success"><%= @badge.description %></strong><br/>

  <br/><br/>

  <strong>Users:</strong>
  <br/><br/>

  <div class="row">
    <div class="columns large-4">
      <% if @badge.users.count > 0 %>
        <ul class="no-disc users posts">
          <% @badge.users.each do |user| %>
            <li>
              <% if user.photo %>
                <%= link_to user do %>
                  <%= image_tag user.photo.thumb('50x50#').url %>
                <% end %>
              <% else %>
                <%= link_to user do %>
                  <%= image_tag 'avatar.svg' %>
                <% end %>
              <% end %>
              <% if user.username %>
                <%= user.username %>
              <% end %>
            </li>
          <% end %>
        </ul>
      <% end %>

    </div>
  </div>
  <br/><br/>
</div>
