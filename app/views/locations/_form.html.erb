  <% if @location.errors.any? %>
    <div id="error_explanation" class="alert-box alert radius">
      <h5><%= pluralize(@location.errors.count, "error") %> prohibited this location from being saved:</h5>

      <ul>
      <% @location.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="large-4 columns">
      <%= form.label :lat, "Lattitude" %>
      <%= form.text_field :lat %>
    </div>
  </div>

  <div class="row">
    <div class="large-4 columns">
      <%= form.label :lon, "Longitude" %>
      <%= form.text_field :lon %>
    </div>
  </div>

  <%= form.hidden_field :post_id, :value => @post.id %>

  <div class="row">
    <div class="large-4 columns actions">
      <%= form.submit 'Save Location', :class => 'button small success' %>
    </div>
  </div>
  <%= link_to "Cancel", post_locations_path %>
