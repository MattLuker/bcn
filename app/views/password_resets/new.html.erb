<h3>Reset Your Password</h3>

<%= form_tag password_resets_path do %>
    <div class="row">
      <div class="large-4 columns">
        <%= label_tag :email %>
        <%= text_field_tag :email %>
      </div>
    </div>

    <div class="row">
      <div class="large-4 columns actions">
        <%= submit_tag 'Reset Password', :class => 'button small success' %>
      </div>
    </div>
<% end %>