<div class="small-12 large-12 columns">

  <h1>Posts</h1>
  <p class="grey">Ideas, links, and other content shared by the Boone community...</p>
  <hr/>
  <br/>

  <%= link_to new_post_path, class: 'button small' do %>
    <%= image_tag 'plus-icon.svg', class: 'ty-icon' %>
    &nbsp;
    New Post
  <% end %>

  <ul class="posts no-bullet">
    <% @posts.each do |post| %>
        <%= render 'layouts/posts_index_list', post: post %>
    <% end %>
  </ul>

  <br/><br/>

  <%= will_paginate @posts, renderer: FoundationPagination::Rails %>
  <br/><br/>
</div>
